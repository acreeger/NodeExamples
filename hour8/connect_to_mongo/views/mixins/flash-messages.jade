mixin flash-messages(flash)
  if (typeof flash !== 'undefined')
    if (flash.warning)
      if (flash.warning && flash.warning[0].errors)
        div.alert-message.warning
          each value, key in flash.warning[0].errors
            p= value.type
      else
        div.alert-message.warning: p= flash.warning
    else if (flash.info)
      div(data-alert='alert').alert-message.success: p= flash.info
 